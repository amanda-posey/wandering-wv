<h1>Edit Comment</h1>

<div class="container col-8">
  <div class="card">
      <div class="card-body">
        <form action="/comment/<%=c.id%>?_method=PUT" method="POST">
          <div class="form-group">
            <p>Name: <%= c.name %> </p>
            <label for="content">Comment</label>
            <textarea type="text" class="form-control" id="content" name="content" required><%= c.content %></textarea>
          </div>
            <input type="submit" class="btn btn-success">
        </form>
      </div>
    </div>
  </div>
</div>